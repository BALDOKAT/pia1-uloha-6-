#include <iostream>
#include <cmath> // Potřebujeme pro hodnotu pí

class Kruh
{
private:
    float radius;  // Proměnná pro uložení poloměru
public:
    // KONSTRUKTORY
    Kruh() : radius(0.0f) // Inicializuje poloměr na 0.0, aby nebyl v neurčitém stavu.
    {
    }

    Kruh(float r) : radius(r) // Inicializuje poloměr na základě hodnoty předané při vytváření objektu.
    {
    }

    // Metoda pro nastavení poloměru
    void setRadius(float r)
    {
        radius = r;
    }

    // VÝPOČET
    // Metoda pro výpočet obsahu kruhu: A = π * r^2
    float spocitejPlochu() const
    {
        return M_PI * radius * radius; // Používáme konstantu M_PI z knihovny <cmath>
    }

    // Metoda pro výpočet obvodu kruhu: O = 2 * π * r
    float spocitejObvod() const
    {
        return 2.0f * M_PI * radius;
    }

    // VÝSTUP
    void vypisUdaje() const  // Výpis údajů o kruhu
    {
        std::cout << "Plocha kruhu (r=" << radius << "): " << spocitejPlochu() << std::endl;
        std::cout << "Obvod kruhu (r=" << radius << "): " << spocitejObvod() << std::endl;
    }
};

//HLAVNÍ FUNKCE

int main()
{
    // Poloměr pro první kruh
    float prvniRadius = 2.0f; // Doplněno .0f pro konzistenci s float

    Kruh prvniKruh; 

    prvniKruh.setRadius(prvniRadius);

    // Vytvoření objektu 'druhyKruh' a inicializace poloměru pomocí parametrického konstruktoru
    float druhyRaidus = 4.0f;
    Kruh druhyKruh(druhyRaidus);

    // Výpočet a výpis výsledků pro prvniKruh
    std::cout << "Plocha kruhu (r=2): " << prvniKruh.spocitejPlochu() << std::endl;
    std::cout << "Obvod kruhu (r=2): " << prvniKruh.spocitejObvod() << std::endl;

    // Volání metody pro výpis údajů pro druhyKruh
    druhyKruh.vypisUdaje();
    
    return 0;
}
